<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - Future of Gaming</title>
    <link rel="stylesheet" href="/css/style.css">
    <style>
        .login-container {
            max-width: 400px;
            margin: 100px auto;
            padding: 40px;
            background: white;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }
        .login-container h1 {
            font-size: 28px;
            margin-bottom: 10px;
            text-align: center;
        }
        .login-container p {
            text-align: center;
            color: #666;
            margin-bottom: 30px;
        }
        .google-btn {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 12px;
            width: 100%;
            padding: 12px;
            background: white;
            color: #3c4043;
            border: 1px solid #dadce0;
            border-radius: 4px;
            font-size: 16px;
            font-weight: 500;
            text-decoration: none;
            cursor: pointer;
            transition: background 0.2s;
        }
        .google-btn:hover {
            background: #f8f9fa;
            border-color: #d2d3d4;
        }
        .divider {
            display: flex;
            align-items: center;
            text-align: center;
            margin: 24px 0;
            color: #666;
        }
        .divider::before,
        .divider::after {
            content: '';
            flex: 1;
            border-bottom: 1px solid #ddd;
        }
        .divider span {
            padding: 0 12px;
            font-size: 14px;
        }
        .magic-link-form input {
            width: 100%;
            padding: 12px;
            border: 1px solid #ddd;
            border-radius: 4px;
            font-size: 16px;
            margin-bottom: 12px;
            box-sizing: border-box;
        }
        .magic-link-form button {
            width: 100%;
            padding: 12px;
            background: #0070f3;
            color: white;
            border: none;
            border-radius: 4px;
            font-size: 16px;
            font-weight: 500;
            cursor: pointer;
            transition: background 0.2s;
        }
        .magic-link-form button:hover {
            background: #0051cc;
        }
        .magic-link-form button:disabled {
            background: #ccc;
            cursor: not-allowed;
        }
        .message {
            padding: 12px;
            margin-bottom: 16px;
            border-radius: 4px;
            font-size: 14px;
        }
        .message.success {
            background: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }
        .message.error {
            background: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
        }
        .back-link {
            text-align: center;
            margin-top: 20px;
        }
        .back-link a {
            color: #0070f3;
            text-decoration: none;
        }
        .back-link a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <%- include('partials/nav') %>

    <div class="login-container">
        <h1>Login</h1>
        <p>Choose your login method</p>
        
        <div id="message"></div>
        
        <!-- Google Sign In -->
        <button class="google-btn" id="googleSignIn">
            <svg width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M17.64 9.2c0-.637-.057-.251-.164-1.84H9v3.481h4.844c-.209 1.125-.843 2.078-1.796 2.717v2.258h2.908c1.702-1.567 2.684-3.874 2.684-6.615z" fill="#4285F4"/>
                <path d="M9 18c2.43 0 4.467-.806 5.956-2.184l-2.908-2.258c-.806.54-1.837.86-3.048.86-2.344 0-4.328-1.584-5.036-3.711H.957v2.332C2.438 15.983 5.482 18 9 18z" fill="#34A853"/>
                <path d="M3.964 10.707c-.18-.54-.282-1.117-.282-1.707 0-.593.102-1.17.282-1.709V4.958H.957C.347 6.173 0 7.548 0 9c0 1.452.348 2.827.957 4.042l3.007-2.335z" fill="#FBBC05"/>
                <path d="M9 3.58c1.321 0 2.508.454 3.44 1.345l2.582-2.58C13.463.891 11.426 0 9 0 5.482 0 2.438 2.017.957 4.958L3.964 7.29C4.672 5.163 6.656 3.58 9 3.58z" fill="#EA4335"/>
            </svg>
            Sign in with Google
        </button>
        
        <div class="divider">
            <span>OR</span>
        </div>
        
        <!-- Magic Link Form -->
        <form class="magic-link-form" id="loginForm">
            <input type="email" id="email" placeholder="your@email.com" required>
            <button type="submit" id="submitBtn">Send login link</button>
        </form>

        <div class="back-link">
            <a href="/">← Back to home</a>
        </div>
    </div>

    <script type="module">
        import { createAuthClient } from 'https://esm.sh/better-auth@1.3.28/client';
        
        const authClient = createAuthClient({
            baseURL: 'http://localhost:3000'
        });

        // Google Sign In
        document.getElementById('googleSignIn').addEventListener('click', async () => {
            try {
                await authClient.signIn.social({
                    provider: 'google',
                    callbackURL: '/'
                });
            } catch (error) {
                console.error('Google sign-in error:', error);
                document.getElementById('message').innerHTML = '<div class="message error">✗ Failed to sign in with Google</div>';
            }
        });

        // Magic Link Form
        const form = document.getElementById('loginForm');
        const submitBtn = document.getElementById('submitBtn');
        const messageDiv = document.getElementById('message');

        form.addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const email = document.getElementById('email').value;
            submitBtn.disabled = true;
            submitBtn.textContent = 'Sending...';
            messageDiv.innerHTML = '';

            try {
                const res = await fetch('/api/auth/sign-in/magic-link', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        email: email,
                        callbackURL: '/',
                    }),
                });

                if (res.ok) {
                    messageDiv.innerHTML = '<div class="message success">✓ Check your email! We sent you a login link.</div>';
                    form.reset();
                } else {
                    const error = await res.json();
                    messageDiv.innerHTML = `<div class="message error">✗ ${error.message || 'Failed to send login link'}</div>`;
                }
            } catch (error) {
                messageDiv.innerHTML = '<div class="message error">✗ Something went wrong. Please try again.</div>';
            } finally {
                submitBtn.disabled = false;
                submitBtn.textContent = 'Send login link';
            }
        });
    </script>

    <%- include('partials/footer') %>
</body>
</html>
