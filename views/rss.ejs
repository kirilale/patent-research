<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>Future of Gaming - Patent Analysis</title>
    <link><%= siteConfig.url %></link>
    <description>Strategic intelligence on gaming's next moves through patent analysis</description>
    <language>en-us</language>
    <atom:link href="<%= siteConfig.url %>/rss" rel="self" type="application/rss+xml" />
    <% patents.forEach(patent => { %>
    <item>
      <title><![CDATA[<%= toTitleCase(patent.title) %>]]></title>
      <link><%= siteConfig.url %>/patent/<%= patent.patent_number %></link>
      <guid isPermaLink="true"><%= siteConfig.url %>/patent/<%= patent.patent_number %></guid>
      <pubDate><%= new Date(patent.published_date).toUTCString() %></pubDate>
      <description><![CDATA[<%= patent.abstract %>]]></description>
      <% if (patent.assignees && patent.assignees.length > 0) { %>
      <author><%= patent.assignees.filter(a => a !== null).join(', ') %></author>
      <% } %>
    </item>
    <% }); %>
  </channel>
</rss>
